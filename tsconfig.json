{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": false,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "traceResolution": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json"
    ],
    "exclude": [
        "__tests__"
    ]
}